package problem2;

public class StarTriangle {
	
public int width;
StarTriangle(int numberOfStar){
	this.width = numberOfStar;
}

void toString(){  
		/*
		 * for (int i=1; i <= width; i++) { for (int j=1; j<=i; j++) { if(j!=width)
		 * return "[*]"; else return " \n"; } } return null;
		 */
		
		/*
		 * do { for(int i=0; i<width; i++) { for(int j=0; j<i ; j++) { return "[*]"; } }
		 * 
		 * } while();
		 */
		
	for(int i = 1; i <= width; i++)
    {
            for(int j = 1; j <= i; j++)
            {
              System.out.print("[*]");  
            }
        System.out.println();
    }
}

}
}
