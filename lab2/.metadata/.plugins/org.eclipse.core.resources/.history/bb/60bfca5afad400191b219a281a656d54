package problem2;

public class StarTriangle {
	
public int width;
StarTriangle(int numberOfStar){
	width = numberOfStar;
}


public String toString1(){ 
String empty = "";
String star = "[*]";
	for(int i = 1; i <= width; i++)
    {
            for(int j = 1; j <= i; j++)
            {
              empty = empty + star;
            }
        return empty;
    }
}

}
